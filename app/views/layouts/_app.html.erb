
<div class="app">
    <div class="app-body">
    
        <%= render 'layouts/sidebar' %>

        <div class="main-pane">
            <%= render 'layouts/header' %>

            <main class="content-area">
              <% if notice %>
                <p class="notification notification--notice"><%= fa_icon "check" %> <%= notice %></p>
              <% end %>
              <% if alert %>
                <p class="notification notification--alert"><%= fa_icon "exclamation" %> <%= alert %></p>
              <% end %>

              <%= yield %>
            </main>

            <%= render 'layouts/footer' %>
        </div>

    </div>
</div>
