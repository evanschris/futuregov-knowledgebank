
<div class="app">
    <%= render 'layouts/header' %>
    <div class="app-body">
        <%= render 'layouts/contents' %>
        <div class="main-pane">
            <main class="content-area">

              <% if notice %>
                <p class="notification notification--notice"><%= fa_icon "check" %> <%= notice %></p>
              <% end %>
              <% if alert %>
                <p class="notification notification--alert"><%= fa_icon "exclamation" %> <%= alert %></p>
              <% end %>

              <%= yield %>

            </main>
            <%= render 'layouts/footer' %>
        </div>
    </div>
</div>
